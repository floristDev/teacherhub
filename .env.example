# =============================================================================
# TeacherHub — Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in all values.
# Never commit .env.local to version control.

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string.
# Local: postgresql://postgres:postgres@localhost:5432/teacherhub
# Production: Use your cloud provider's connection string (e.g. Supabase, Neon)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/teacherhub"

# =============================================================================
# AUTHENTICATION (Auth.js v5 / next-auth)
# =============================================================================
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET=""

# The canonical URL of your application
# Local: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL="http://localhost:3000"
AUTH_URL="http://localhost:3000"

# --- Google OAuth ---
# Create credentials at: https://console.developers.google.com/
# Authorized redirect URI: {NEXTAUTH_URL}/api/auth/callback/google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# =============================================================================
# STRIPE (Billing)
# =============================================================================
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Webhook secret — get from: https://dashboard.stripe.com/webhooks
# Local testing: use `stripe listen --forward-to localhost:3000/api/webhooks/stripe`
STRIPE_WEBHOOK_SECRET=""

# =============================================================================
# EMAIL (Resend)
# =============================================================================
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=""

# The "from" address for transactional emails (must be a verified domain in Resend)
EMAIL_FROM="TeacherHub <noreply@yourdomain.com>"

# =============================================================================
# APP CONFIG
# =============================================================================
NEXT_PUBLIC_APP_NAME="TeacherHub"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# OPTIONAL: ANALYTICS
# =============================================================================
# Uncomment and fill in if you add analytics
# NEXT_PUBLIC_POSTHOG_KEY=""
# NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"
